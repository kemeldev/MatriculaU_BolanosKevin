<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Universidad Fidelitas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #56137a;
            color: white;
        }

        /* Navbar */
        .navbar {
            background-color: #56137a;
            padding: 20px; /* Adds more padding to the navbar */
        }

        .navbar .navbar-brand img {
            height: 60px; /* Increase the logo size */
        }

        .navbar-nav .nav-item .nav-link {
            color: white;
            font-size: 20px;
            padding: 10px 20px; /* Adds more padding for the text in the navbar */
        }

        .navbar-nav .nav-item .nav-link:hover {
            color: #f8f9fa;
        }

        /* Button Styles for Login and Register */
        .navbar-nav .nav-item .nav-link.login-btn {
            background-color: #f8f9fa;
            color: #56137a;
            padding: 10px 20px;
            font-size: 1.2rem;
            text-decoration: none;
            border-radius: 5px;
        }

        .navbar-nav .nav-item .nav-link.login-btn:hover {
            background-color: #56137a;
            color: white;
        }

        .navbar-nav .nav-item .nav-link.register-btn {
            background-color: #7d4b98;
            color: white;
            padding: 10px 20px;
            font-size: 1.2rem;
            text-decoration: none;
            border-radius: 5px;
        }

        .navbar-nav .nav-item .nav-link.register-btn:hover {
            background-color: #56137a;
            color: white;
        }

        /* Hero section */
        .hero-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 100px;
            background-color: #56137a;
        }

        .hero-text {
            max-width: 50%;
        }

        .hero-text h1 {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .hero-text h3 {
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .btn-register {
            background-color: #f8f9fa;
            color: #56137a;
            padding: 10px 20px;
            font-size: 1.2rem;
            text-decoration: none;
            border-radius: 5px;
        }

        .btn-register:hover {
                background-color: #56137a;
            color: white;
        }

        .hero-image img {
            max-width: 40%;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://upload.wikimedia.org/wikipedia/commons/e/e1/Logo_Universidad_Fid%C3%A9litas.jpg" alt="University Logo" style="height: 200px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/careers">Careers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link login-btn" href="/account/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link register-btn" href="/account/register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    @RenderBody()

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>