@model MatriculaU_BolanosKevin.Models.Course

@{
    ViewData["Title"] = "Edit Course";
    <style>
        body {
            background-color: white !important;
			color: black !important;
        }
    </style>
}

<h2>Edit Course</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Credits"></label>
        <input asp-for="Credits" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CareerId">Career</label>
        <select asp-for="CareerId" asp-items="ViewBag.CareerId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
